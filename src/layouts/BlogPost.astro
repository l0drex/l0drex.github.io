---
import { dateFormatter } from "../utils/general";
import TypeIcon from "@components/TypeIcon.astro";
import Intro from "../components/Intro.astro";

const { frontmatter } = Astro.props;

const date = dateFormatter(frontmatter.date ?? new Date());
---

<Intro title={frontmatter.title}>
  <span class="text-center text-2xl sm:text-3xl inline-flex gap-2">
    <TypeIcon type={frontmatter.type} />
    {frontmatter.type}
    {frontmatter.type && date && "Â·"}
    <span>{date}</span>
  </span>
</Intro>

<slot name="details" />

<article
  class="mx-auto max-w-3xl prose dark:prose-invert prose-img:rounded-lg prose-img:shadow-lg prose-img:mx-auto prose-li:marker:text-gray-500"
>
  <slot />
</article>

<slot name="references" />
