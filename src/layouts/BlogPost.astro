---
import { dateFormatter } from "../utils/general";
import JourneyType from "@components/TypeIcon.astro";
import Intro from "../components/Intro.astro";
import "@styles/markdown.css";

const { frontmatter } = Astro.props;

const date = dateFormatter(frontmatter.date ?? new Date());
---

<Intro title={frontmatter.title}>
    <span class="text-center mb-8 text-2xl sm:text-3xl inline-flex gap-2">
        {(<JourneyType type={frontmatter.type} />)}
        {(frontmatter.type && date) && "Â·"}
        <span>{date}</span>
    </span>
</Intro>

<slot name="details" />

<article class="mx-auto content max-w-3xl">
    <slot />
</article>

<slot name="references" />
