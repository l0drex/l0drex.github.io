---
import colors from "../../languageColors.json";

interface Props {
  lang: string;
}

const { lang } = Astro.props;

const fallbackColor = "#646464";
let langColor: string = fallbackColor;
if (lang != null && lang in colors) {
  langColor = colors[lang as keyof typeof colors]?.color ?? fallbackColor;
}

// quick fix
if (lang === "C++") {
  langColor = colors["C++"].color;
}
---

<div
  class="m-0 bg-(--langColor)/40 px-2s rounded-sm text-gray-600 dark:text-gray-300"
>
  {lang}
</div>

<style define:vars={{ langColor }}></style>
