---
import { Icon } from "astro-icon/components";

interface Props {
  href: string;
  label: string;
  icon: string;
}

const { href, label, icon } = Astro.props;
---

<a
  href={href}
  class="py-2 px-4 mt-1 mb-3 rounded-full
inline-flex gap-1 items-center
select-none shadow-md
transition-all hover:no-underline hover:shadow-lg hover:scale-105
dark:shadow-none border-2 border-neutral-500/30 dark:border(--colorDark)"
>
  {label}
  <Icon name={icon} />
</a>
